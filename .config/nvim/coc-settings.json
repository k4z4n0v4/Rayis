{
	"languageserver": {
	  "haskell": {
		"command": "haskell-language-server-wrapper",
	    "args": ["--lsp"],
	    "rootPatterns": [
          "*.cabal",
	      "stack.yaml",
	      "cabal.project",
	      "package.yaml"
	    ],

	    "filetypes": [
	      "hs",
	      "lhs",
	      "haskell"
	    ],
	    "initializationOptions": {
	      "languageServerHaskell": {
		    "hlintOn": true
	      }
	    }
	    },

	  "bash": {
	      "command": "bash-language-server",
	      "args": ["start"],
	      "filetypes": ["sh"]
	    }
	}
}
